<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="tests">
   <test name="FirefoxTest">
   <groups>
   	<run>
		<include name = "Regression" /> 
	</run>
   </groups>
    
<!--
	<include name = "Regression" /> 
	<include name = "Access" />	
	-->
<parameter name="browser" value="firefox"/>
<classes>
   <class name="com.applect.meritnation.scripts.CreateAccountTest"/>
   <class name="com.applect.meritnation.scripts.SearchTest"/>
   <class name="com.applect.meritnation.scripts.LoginTest"/>
   <class name="com.applect.meritnation.scripts.AsknAnswerTest"/>
   <class name="com.applect.meritnation.scripts.StudyTest"/>
</classes>
</test> <!-- FirefoxTest -->

   <test name="ChromeTest">
   <groups>
   	<run>
		<include name = "Regression" /> 
	</run>
   </groups>
    
<!--
	<include name = "Regression" /> 
	<include name = "Access" />	
	-->
<parameter name="browser" value="chrome"/>
<classes>
   <class name="com.applect.meritnation.scripts.CreateAccountTest"/>
   <class name="com.applect.meritnation.scripts.SearchTest"/>
   <class name="com.applect.meritnation.scripts.LoginTest"/>
   <class name="com.applect.meritnation.scripts.AsknAnswerTest"/>
   <class name="com.applect.meritnation.scripts.StudyTest"/>
</classes>
</test> <!-- ChromeTest -->


</suite> <!-- RegressionSuite -->
